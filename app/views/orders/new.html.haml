    =f.label :size, class: "control-label col-sm-3"
    .col-sm-7.preffered_date_position
      .form-inline
        =f.text_field :length, class: "form-control", placeholder: "縦", size:"26"
        =f.text_field :width, class: "form-control", placeholder: "横", size:"26"

  .form-group
    =f.label :message, class: "control-label col-sm-3"
    .col-sm-7
      = f.text_area :message, class: "form-control"
  .col-sm-offset-3
    .btn-order
      =f.submit '確認', :class => 'btn btn-primary'
